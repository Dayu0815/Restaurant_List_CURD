<h1 class="mb-1 restaurant-show-title">{{ restaurantData.name }}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto" style="max-width: 800px;">

      <p class="mb-1 fw-bold">
        <span class="text-secondary fw-bold">
          <i class="fas fa-utensils pr-2 fa-2x p-2"></i>
          類別：
        </span>
        {{ restaurantData.category }}
      </p>

      <p class="mb-1 fw-bold">
        <span class="text-secondary fw-bold">
          <i class="fas fa-map-marker-alt pr-2 fa-2x  p-2"></i>
          地址：
        </span>
        {{ restaurantData.location }}
        <a href={{ restaurantData.google_map }} class=" text-secondary" target="_blank">
          <i class="fa-solid fa-map-location-dot pr-2 fa-2x  p-2"></i>
        </a>
      </p>

      <p class="mb-1 fw-bold">
        <span class="text-secondary fw-bold">
          <i class="fas fa-mobile-alt pr-2 fa-2x p-2"></i>
          電話：
        </span>
        {{ restaurantData.phone }}
      </p>

      <p class="mb-5 fw-bold">
        <span class="text-secondary fw-bold">
          <i class="fa-solid fa-comment fa-2x p-1"></i>
          簡介：
        </span>

        {{ restaurantData.description }}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src={{ restaurantData.image }} alt={{ restaurantData.name }}
        style="max-width: 800px;">
    </div>
  </div>
</div>